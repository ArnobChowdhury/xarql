    <servlet-name>com.xarql.polr.Updt</servlet-name>
    <url-pattern>/polr/updt</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>searches</description>
    <display-name>PolrFind</display-name>
    <servlet-name>PolrFind</servlet-name>
    <servlet-class>com.xarql.polr.PolrFind</servlet-class>
