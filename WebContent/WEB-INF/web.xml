  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Help</display-name>
    <servlet-name>Help</servlet-name>
    <servlet-class>com.xarql.main.Help</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.main.Help</servlet-name>
    <url-pattern>/help</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/error?code=404</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/error?code=400</location>
  </error-page>
  <filter>
    <filter-name>ExpiresFilter</filter-name>
    <filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
    <init-param>
      <param-name>ExpiresByType image</param-name>
      <param-value>access plus 10 minutes</param-value>
    </init-param>
    <init-param>
      <param-name>ExpiresByType text/css</param-name>
      <param-value>access plus 1 day</param-value>
    </init-param>
    <init-param>
      <param-name>ExpiresByType application/javascript</param-name>
      <param-value>access plus 1 day</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>ExpiresFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
</web-app>