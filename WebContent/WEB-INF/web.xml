  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.auth.GoogleHandler</servlet-name>
    <url-pattern>/auth/google</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Recaptcha Authentication</description>
    <display-name>RecaptchaHandler</display-name>
    <servlet-name>RecaptchaHandler</servlet-name>
