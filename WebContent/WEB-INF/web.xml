<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>xarql</display-name>
  <welcome-file-list>
    <welcome-file>/src/welcome/welcome.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>Welcome</display-name>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>com.xarql.main.Welcome</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.main.Welcome</servlet-name>
    <url-pattern>//*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>com.xarql.main.Welcome</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Error</display-name>
    <servlet-name>Error</servlet-name>
    <servlet-class>com.xarql.main.Error</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.main.Error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <servlet>
