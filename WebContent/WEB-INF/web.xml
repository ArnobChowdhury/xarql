    <servlet-class>com.xarql.main.Chat</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.main.Chat</servlet-name>
    <url-pattern>/chat</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>SendProcessor</display-name>
    <servlet-name>SendProcessor</servlet-name>
    <servlet-class>com.xarql.chat.SendProcessor</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.chat.SendProcessor</servlet-name>
    <url-pattern>/chat/send</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ChatUpdt</display-name>
    <servlet-name>ChatUpdt</servlet-name>
